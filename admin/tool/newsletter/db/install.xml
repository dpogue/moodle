<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="admin/tool/newsletter/db" VERSION="20111218" COMMENT="XMLDB file for Moodle admin/tool/newsletter"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="newsletter" COMMENT="Table to store newsletter entries" NEXT="newsletter_email">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" NEXT="datepublished"/>
        <FIELD NAME="datepublished" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" PREVIOUS="id"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="newsletter_email" COMMENT="Table to store newsletter subscribers" PREVIOUS="newsletter">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" ENUM="false" NEXT="email"/>
        <FIELD NAME="email" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false" ENUM="false" PREVIOUS="id" NEXT="secret"/>
        <FIELD NAME="secret" TYPE="char" LENGTH="15" NOTNULL="false" SEQUENCE="false" ENUM="false" PREVIOUS="email" NEXT="confirm"/>
        <FIELD NAME="confirm" TYPE="int" LENGTH="1" NOTNULL="false" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false" PREVIOUS="secret"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id" NEXT="secret"/>
        <KEY NAME="secret" TYPE="unique" FIELDS="secret" PREVIOUS="primary"/>
      </KEYS>
    </TABLE>    
  </TABLES>
</XMLDB>
